.row-fluid
  - @search_layout['columns'].each do |column|
    %div{:class => get_column_classes(column)}
      - column['searches'].each do |search|

        - result = @results[search['source']]
        - if result
          - source = SEARCHES_CONFIG['sources'][search['source']]
          - warning = source ? source['warning'] : nil;

          - if session[:async_off]
            .result_set
            = render partial: "/spectrum/aggregate/result_header", locals: {result: result, title: source['title'], description: source['description']}
            = render partial: "/spectrum/aggregate/result_docs", locals: {result: result, render_opts: search_render_options(search, source), row_opts: search['row_opts']}
            - if search['display_footer']
              = render partial: "/spectrum/aggregate/result_footer", locals: {result: result}
          - else
            .result_set.async_result_set{:"data-result-set" => spectrum_fetch_path(params.except(:controller, :action).merge(:datasource => search['source'] ))}
              = render partial: "/spectrum/aggregate/result_header_async", locals: {result: result, title: source['title'], description: source['description']}
              = render partial: '/datasource_warning', locals: {warning: warning}

              .loading_block
                Loading...
                =image_tag('ajax-indicator.gif')

