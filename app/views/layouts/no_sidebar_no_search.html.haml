    #trigger
    = render :partial => "/top_navigation_bar"
    #outer-container.container-fluid
      #page.container-fluid
        -# = render :partial => "/header"
        #bd.row-fluid
          .row-fluid

            = render :partial=>'/layouts/messages'
            = yield

          .clear-both
        = render :partial => "/footer"

